# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
DEBUG=True

# Modal Configuration (Get these from Modal dashboard)
MODAL_SAM2_ENDPOINT=https://your-modal-app-id--sam2-generate-masks.modal.run
MODAL_API_KEY=your-modal-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads
MASKS_DIR=masks
RESULTS_DIR=results

# Session Configuration
SESSION_TIMEOUT_HOURS=1

# CORS Configuration (for production, specify your frontend domain)
ALLOWED_ORIGINS=*

# Optional: Redis Configuration (if using Redis instead of in-memory storage)
REDIS_URL=redis://localhost:6379/0